/*
Q3: Write a program that finds the number of sides of a regular polygon whose exterior angle is
entered by the user.
*/

#include <stdio.h>

int main()
{
	float angle, polygon;

	printf("Enter an exterior angle (if you write a fractional number use dot instead of comma): \n");
	scanf("%f", &angle);

	polygon = 360 / angle;

	printf("Your polygon has %.0f sides", polygon);

	return 0;
}
