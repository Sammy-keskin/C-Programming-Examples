#include<stdio.h>
int main()
{
int i, a[3],b[3]={5,6,7};
for(i=0; i<3; i++)
 {
 printf("a[%d]: ", i); // a[0]: 10
 scanf("%d",&a[i]); // a[1]: 15
 } // a[2]: 20
for(i=0; i<3; i++)
 printf("a[%d]=%d \t",i, a[i]); // a[0]= 10 a[1]= 15 a[2]= 20
printf("\n");
for(i=0; i<4; i++)
 printf("b[%d]=%d \t",i, b[i]); // b[0]= 5 b[1]= 6 b[2]= 7 b[3]=-8589993460!!
 // or b[3]=0!!


}
